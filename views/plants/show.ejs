<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ShowPageWorking</title>
</head>
<body>
  
  
  <form>
    <input type="text" name="name" placeholder="Name" />
    <input type="submit" value="Search"/>
  </form>


  <header>
  </header>
    <h1>Show Page for <%=Plant.name%></h1>
    <nav>

          <a href="/">Home</a>


    </nav>

  <main>
    <section>
      <h2>Author Attributes:</h2>
      <ul>
        <!-- image -->
        <li>Name: <%=Plant.name%></li>
        <li>Light: <%=Plant.light%></li>
        <li>Price: <%=Plant.price%></li>
        <li>Rating: <%=Plant.rating%></li>
        <li>Description: <%=Plant.description%></li>
        
        <li>Comments: </li>
        <% Plant.reviews.forEach(review => { %>   <% console.log(review) %>
          
          <form action="/show/<%= review._id %>?_method=DELETE" method="POST">
            <input type="submit" value="Delete Comment" />
          </form>
          
        <form action="">
          <li><%=review.comment%></li>
        </form>
          
          <%})%>
      </ul>

      <!-- We want to delete the specific html by deleting the specific comment in the database. -->
      

      <form action="/show/<%= Plant._id %>?_method=PUT" method="POST">
        <input name="comment" type="string" placeholder="Comments"/>
        <input type="submit" value="Submit"/>
      </form>


    </section>
  </main>
</body>
</html>