<body>
<section class="grid">
    
    <section class="banner">
      <div class ="banner-body"></div>
    </section>

  
      <header class="navbar">
        
        <div class="plantlogo">Leafly
          <i class="fas fa-seedling"></i>
        </div>
        
        <a href="/"><button class="navbar home-button navbutton button">Home</button></a>
        
        <a href="/"><button class="navbar findmyplant-button navbutton button">Something</button></a>


        <form class="searchbar navbutton button" action="/show/search" method="GET">


          <input class="searchfield" type="text" name="name" placeholder="Plant Name" />
          <input class="searchbutton button" type="submit" value="Search"/>

        </form>

      </header>

      <div class="fillerphoto-box">
          <div class="photo-wrapper">

            <div class="test">
              <img class="fillerphoto" src="https://images.unsplash.com/photo-1592150621744-aca64f48394a?ixid=MnwxMjA3fDB8MHxwaG90[â€¦]GVufDB8fHx8& ixlib=rb-1.2.1&auto=format&fit=crop&w=1368&q=80"/>
            </div>

          </div>
      </div>


      <!-- PLANT FILTER -->
      <aside class="sidebar-left">
        Left Sidebar
        
        
        
        <form id="filter" action="/show/filter">
            <select class="example" name="light">
                  <option name="" value="0" selected>Light Level</option>
                  <option name="table1" value="1"> 1</option>
                  <option name="table2" value="2"> 2</option>
                  <option name="table3" value="3"> 3</option>
            </select>
            
            <select class="example" name="price">
              <option name="" value="0" selected>Price</option>
              <option name="table1" value="1"> 1</option>
              <option name="table2" value="2"> 2</option>
              <option name="table3" value="3"> 3</option>
            </select>
            
            <input type="submit" value="go">
            
        </form>

    
        <form method="get" action="/">
          <button class="button" type="submit">Clear Search</button>
        </form>

      </aside>
    


      <article>
        <ul class="plant-item_container">
          <% plants.forEach(plant => { %>
          <li class="plant-item">
              <a href="/show/<%= plant._id %>"> <%= plant.name %></a>
          </li>
          <% })%>
        </ul>
      </article>

      
      <footer>
        Footer
      </footer>
