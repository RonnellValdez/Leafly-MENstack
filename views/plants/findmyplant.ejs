<!DOCTYPE html>
<html lang="en">
    <link rel="stylesheet" href="/styles/findmyplant.css">


<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Spectral:wght@800&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <title>Find My Plant</title>
</head>
<body>
  <section class="grid">
      
      <div class="banner">
      </div>
    
      <header class="navbar">
          
          <div class="plantlogo">Leafly
            <i class="fas fa-seedling"></i>
          </div>
          
          <a href="/"><button class="home-button navbutton button">Home</button></a>
          
          <a href="https://saveplants.org/"><button class="findmyplant-button navbutton button">Conservation</button></a>


          <form class="searchbar navbutton button" action="/show/search" method="GET">


            <input class="search-box_field" type="text" name="name" placeholder="Plant Name" />
            <input class="search-box_button button" type="submit" value="Search"/>

          </form>

        </header>


        <div class="fillerphoto-box">
            <div class="photo-wrapper">
                <img class="fillerphoto" src="https://images.unsplash.com/photo-1592150621744-aca64f48394a?ixid=MnwxMjA3fDB8MHxwaG90[…]GVufDB8fHx8& ixlib=rb-1.2.1&auto=format&fit=crop&w=1368&q=80"/>
                
                <!-- <div class="text-background"> -->
                  <div class="img-text">
                    Find Your Plant Today
                  </div>
                <!-- </div> -->

            </div>
        </div>

        <!-- PLANT FILTER -->
        <aside class="sidebar-left">
          
          <form id="filter" action="/show/filter">

              <select class="example" name="light" required>
                    <option name="" value="" selected>Light Level</option>
                    <option name="table1" value="1"> 1</option>
                    <option name="table2" value="2"> 2</option>
                    <option name="table3" value="3"> 3</option>
              </select>
              
              <select class="example" name="price" required>
                <option name="" value="" selected>Price</option>
                <option name="table1" value="1"> 1</option>
                <option name="table2" value="2"> 2</option>
                <option name="table3" value="3"> 3</option>
                <option name="table3" value="4"> 4</option>
              </select>
              
              <input type="submit" value="go">
              
          </form>

      
          <form method="get" action="/">
            <button class="button" type="submit">Clear Search</button>
          </form>

        </aside>
      


        <article class="search-filter_box">
          <section>

            <ul class="plant-item_container">

              <% plants.forEach(plant => { %>
              <li class="plant-item">
                  <a href="/show/<%= plant._id %>"> <%= plant.name %></a>
              </li>

              <div class="plant-img_div">
                <img class="plant-img" src="<%=plant.image%>"/>
              </div>

              <% })%>
            </ul> 

          </section>
        </article>

        
        <footer>
          <article>
            Copyright© images from https://moderngarden.co/
          </article>
        </footer>
